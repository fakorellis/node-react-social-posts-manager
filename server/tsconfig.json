{
    "compilerOptions": {
      "experimentalDecorators": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": [
      "**/__tests__/**",
      "**/*.test.ts",
      "**/*.spec.ts",
      "coverage",
      "jest.config.js",
      "jest.setup.ts"
    ]
  }
  